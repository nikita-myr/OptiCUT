<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="400" d:DesignHeight="235"
        x:Class="OptiCUT.Views.AboutWindow"
        Title="About OptiCUT"
        TransparencyLevelHint="AcrylicBlur"
        ExtendClientAreaToDecorationsHint="False">
    <Panel>
        <ExperimentalAcrylicBorder IsHitTestVisible="False">
            <ExperimentalAcrylicBorder.Material>
                <ExperimentalAcrylicMaterial
                    BackgroundSource="Digger"
                    TintColor="Black"
                    TintOpacity="1"
                    MaterialOpacity="0.65" />
            </ExperimentalAcrylicBorder.Material>
        </ExperimentalAcrylicBorder>

        <Panel Margin="40">
            <TextBlock HorizontalAlignment="Center">OpitCUT</TextBlock>
            <TextBlock HorizontalAlignment="Center" Margin="20">программа для оптимизации раскроя</TextBlock>
            <TextBlock HorizontalAlignment="Center" Margin="40">витражного профиля</TextBlock>
        </Panel>
    </Panel>
</Window>


